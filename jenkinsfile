pipeline {
    agent any

    environment {
        VENV = "${env.HOME}/.venvs/ansible"
        AWS_DEFAULT_REGION = 'us-east-1'
        VAULT_PASS_FILE = "/var/lib/jenkins/.venvs/vault.pass"
        ANSIBLE_VAULT_PASSWORD = credentials('ansible-vault-pass-id')
    }

    stages {

        stage('Checkout') {
            steps { checkout scm }
        }

        stage('Prepare Environment') {
            steps {
                sh '''#!/bin/bash
                set -e

                mkdir -p "$(dirname "$VENV")"

                if [ ! -d "$VENV" ]; then
                    python3 -m venv "$VENV"
                fi

                source "$VENV/bin/activate"

                pip install --upgrade pip setuptools wheel
                pip install ansible boto3 botocore
                ansible-galaxy collection install amazon.aws --force
                '''
            }
        }

        stage('Create EC2') {
            steps {
                withAWS(credentials: 'aws_jenkins_credentials', region: AWS_DEFAULT_REGION) {
                    sh '''#!/bin/bash
                    set -e
                    source "$VENV/bin/activate"

                    echo "${ANSIBLE_VAULT_PASSWORD}" > vault-pass.txt

                    # Create EC2 instances
                    ansible-playbook -i ansible/inventories/aws_ec2.yaml ansible/playbooks/create_ec2.yaml --vault-password-file vault-pass.txt

                    # Refresh inventory so new hosts are visible
                    ansible-playbook -i ansible/inventories/aws_ec2.yaml -m meta -a "refresh_inventory"

                    # Wait for new hosts to become SSH reachable
                    ansible-playbook -i ansible/inventories/aws_ec2.yaml -m ansible.builtin.wait_for_connection -a "timeout=300"

                    rm -f vault-pass.txt
                    '''
                }
            }
        }

        stage('Configure Server') {
            steps {
                withAWS(credentials: 'aws_jenkins_credentials', region: AWS_DEFAULT_REGION) {
                    sh '''#!/bin/bash
                    set -e
                    source "$VENV/bin/activate"

                    echo "${ANSIBLE_VAULT_PASSWORD}" > vault-pass.txt

                    ansible-playbook -i ansible/inventories/aws_ec2.yaml ansible/playbooks/configure_ec2.yaml --vault-password-file vault-pass.txt

                    rm -f vault-pass.txt
                    '''
                }
            }
        }

        stage('Deploy Application') {
            steps {
                withAWS(credentials: 'aws_jenkins_credentials', region: AWS_DEFAULT_REGION) {
                    sh '''#!/bin/bash
                    set -e
                    source "$VENV/bin/activate"

                    echo "${ANSIBLE_VAULT_PASSWORD}" > vault-pass.txt

                    ansible-playbook -i ansible/inventories/aws_ec2.yaml ansible/playbooks/deploy_app.yaml --vault-password-file vault-pass.txt

                    rm -f vault-pass.txt
                    '''
                }
            }
        }
    }

    post {
        success { echo 'Pipeline completed successfully!' }
        failure { echo 'Pipeline failed. Check logs for errors.' }
    }
}
