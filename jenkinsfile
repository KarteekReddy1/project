pipeline {
    agent any

    environment {
        VENV = "${HOME}/.venvs/ansible"
        AWS_DEFAULT_REGION = 'us-east-1'      // Change region if needed
        ANSIBLE_VAULT_PASSWORD = credentials('ansible-vault-pass-id') // Jenkins Vault password
    }

    stages {

        stage('Checkout') {
            steps { 
                checkout scm 
            }
        }

        stage('Prepare Environment') {
            steps {
                sh '''
                    # Create virtualenv if it doesn't exist
                    python3 -m venv ${VENV} || true
                    source ${VENV}/bin/activate

                    # Upgrade pip, setuptools, wheel
                    pip install --upgrade pip setuptools wheel

                    # Install required Python packages
                    pip install --upgrade ansible boto3 botocore

                    # Install AWS Ansible collection
                    ansible-galaxy collection install amazon.aws --force || true
                '''
            }
        }

        stage('Create EC2') {
            steps {
                withAWS(credentials: 'aws_jenkins_credentials', region: "${AWS_DEFAULT_REGION}") {
                    sh '''
                        source ${VENV}/bin/activate
                        # Save vault password to a temporary file
                        echo "${ANSIBLE_VAULT_PASSWORD}" > /tmp/vault_pass.txt
                        ${VENV}/bin/ansible-playbook \
                            -i ansible/inventories/aws_ec2.yaml \
                            ansible/playbooks/create_ec2.yaml \
                            --vault-password-file /tmp/vault_pass.txt
                        rm -f /tmp/vault_pass.txt
                    '''
                }
            }
        }

        stage('Configure Server') {
            steps {
                withAWS(credentials: 'aws_jenkins_credentials', region: "${AWS_DEFAULT_REGION}") {
                    sh '''
                        source ${VENV}/bin/activate
                        echo "${ANSIBLE_VAULT_PASSWORD}" > /tmp/vault_pass.txt
                        ${VENV}/bin/ansible-playbook \
                            -i ansible/inventories/aws_ec2.yaml \
                            ansible/playbooks/configure_ec2.yaml \
                            --vault-password-file /tmp/vault_pass.txt
                        rm -f /tmp/vault_pass.txt
                    '''
                }
            }
        }

        stage('Deploy Application') {
            steps {
                withAWS(credentials: 'aws_jenkins_credentials', region: "${AWS_DEFAULT_REGION}") {
                    sh '''
                        source ${VENV}/bin/activate
                        echo "${ANSIBLE_VAULT_PASSWORD}" > /tmp/vault_pass.txt
                        ${VENV}/bin/ansible-playbook \
                            -i ansible/inventories/aws_ec2.yaml \
                            ansible/playbooks/deploy_app.yaml \
                            --vault-password-file /tmp/vault_pass.txt
                        rm -f /tmp/vault_pass.txt
                    '''
                }
            }
        }
    }

    post {
        success { echo 'Pipeline completed successfully!' }
        failure { echo 'Pipeline failed. Check logs for errors.' }
    }
}
